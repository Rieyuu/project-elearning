# Database Configuration
DATABASE_DRIVER=pg
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=elearning_db
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/elearning_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Storage Configuration
STORAGE_DRIVER=local
# STORAGE_DRIVER=cloudinary  # Uncomment to use Cloudinary

# Cloudinary Configuration (when STORAGE_DRIVER=cloudinary)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_DIR=public/uploads

# Server Configuration
PORT=3000
NODE_ENV=development

# Test Database (optional)
TEST_DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/elearning_test_db
TEST_DB_NAME=elearning_test_db
